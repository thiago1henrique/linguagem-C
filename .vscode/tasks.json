{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build",
            "command": "gcc", // Removi o /usr/bin/ para ele buscar no PATH de ambos
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe" // .exe no final funciona no Win e o Linux aceita
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Tarefa universal para GCC"
        }
    ],
    "version": "2.0.0"
}